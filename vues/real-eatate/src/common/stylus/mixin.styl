border-1px($color)
  position: relative
  &:after
    display: block
    width: 100%
    position: absolute
    left: 0
    bottom: 0
    border-top: 1px solid $color
    content: ' '

border-none()
  &:after
    display: none

bg-image($url)
  background-image: url($url + "@2x.png")
  @media (-webkit-min-device-pixel-ratio: 3),(min-device-pixel-ratio: 3)
    background-image: url($url + "@3x.png")

border-colors($color)
  position: relative
  &:after
    display: block
    width: 100%
    position: absolute
    left: 0
    top: -6px
    border-top: 6px solid $color
    border-radius: 5px 5px 0 0
    content: ' '
